doctype html
html(lang="{{ props.locale }}", ng-app="{{ props.moduleName }}")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title {{ props.className }} - {{ props.description }}
    meta(name="description", content="{{ props.description }}")
  {%- if props.supportLegacy == 'yes' %}

    <!--[if lt IE 9]>
    script(src="//cdnjs.cloudflare.com/ajax/libs/es5-shim/2.2.0/es5-shim.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js")
    <![endif]-->
  {%- endif %}

    //- Sets initial viewport load and disables zooming
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    //- Makes your prototype chrome-less once bookmarked to your phone's home screen
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
    //- Set a shorter title for iOS6 devices when saved to home screen
    meta(name="apple-mobile-web-app-title" content="{{ props.title }}")

    //- Favicon
    link(rel="icon", href="favicon.ico", type="image/x-icon")
    link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
    //- Author of this application
    link(rel="author" href="https://github.com/{{ props.username }}")

    //- bower:css
    //- endbower

    //- inject:css
    //- endinject

  body(ng-controller="MainCtrl as main")
    .site-wrapper
      .site-wrapper-inner
        .masthead.clearfix
          .inner(ng-include="'views/partials/header.html'")
        .inner.cover
{%- if props.ngModules|contains('route') %}
          .inner(ng-view)
{%- else %}
          .inner(ng-include="'views/home.html")
{%- endif %}
        .mastfoot
          .inner(ng-include="'views/partials/footer.html'")

    //- bower:js
    //- endbower
{%- if props.locale != 'en' %}
    script(src="bower_components/angular-i18n/angular-locale_{{ props.locale }}.js")
{%- endif %}

    //- inject:js
    //- endinject

    //- views:js
    //- endinject

